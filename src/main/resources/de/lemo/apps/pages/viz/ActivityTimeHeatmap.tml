<html t:type="layoutdashboard" title="LeMo | Visualization"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    
    <style>

		#viz svg {
		height: 500px;
		}
	</style>
     
  <!-- Breadcrumb component-->
	<div class="row-fluid">
        <div class="span12">
    	<ul class="breadcrumb">
  			<li t:type="crumb/breadcrumbtrail" t:value="breadCrumb">
    			<a t:type="crumb/displaybreadcrumb" t:breadcrumb="breadCrumb" />
  			</li>
		</ul>
		</div>
	</div>
	
	<div class="row-fluid">
		  
    	<div class="span9">
			<div id="cal-heatmap1"></div>
        	<div id="cal-heatmap2"></div>
        	<div id="cal-heatmap3"></div>
        	<br />
    			  
            
        	
        	
    	</div>
      
    	<div class="span3">
    		<t:zone t:id="formZone" id="formZone">
    		</t:zone> 
      		<t:form t:type="form" t:id="customizeForm" class="pull-left">
    		<div class="row-fluid">
      		<div class="span12">
      			<div class="well">
      				<h4>${course.courseDescription}</h4>
      				<br />
      				${message:available}: ${FirstRequestDate} - ${LastRequestDate}
      				<br />
      				<br />
      				${message:range}: ${resolution} ${message:days}
      				<br />
      				<ul class="nav nav-list">
 
					  <li class="divider"></li>
					
					</ul>
      				
      				<span t:type="submit" value="${message:update}" class="btn btn-primary pull-left" />
      				<span class="pull-left"> &nbsp; </span>
      				<a href="#myModal" role="button" class="btn pull-left" data-toggle="modal">${message:help}</a>
      				<span class="btn export-button pull-right">${message:exportCSV}</span>
      				
      				<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					  <div class="modal-header">
					    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
					    <h3 id="myModalLabel">Help for Heatmap</h3>
					  </div>
					  <div class="modal-body">
					    <p>You can use this to see course activity</p>
					  </div>
					</div>
      				
      				<br />
      			</div>
      		</div>
      		</div>
			<div class="row-fluid">
    		<div class="span12">
        			
    			
      				<t:errors/>
        			<div class="accordion" id="accordion2">
			            
			            <!-- Dates -->
			            <div class="accordion-group">
			              <div class="accordion-heading">
			                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
			                  ${message:dateTimeOption} <b class="caret"></b>
			                </a>
			              </div>
			              <div id="collapseOne" class="accordion-body collapse in">
			                <div class="accordion-inner">
	
                        <div class="control-group">
                          <label class="control-label">${message:begin}:</label>
                          <div class="controls">
                            <input t:id="beginDate" class="input-small" t:value="beginDate" t:format="${message:customDateFormat}" t:mixins="jquery/CustomDatepicker" t:params="datepickerparams"/>
                          </div>
                        </div>
                        
                        <div class="control-group">
                          <label class="control-label">${message:end}:</label>
                          <div class="controls">
                            <input t:id="endDate" class="input-small" t:value="endDate" t:format="${message:customDateFormat}" t:mixins="jquery/CustomDatepicker" t:params="datepickerparams"/>
                          </div>
                        </div>
                        
                      </div>
			              </div>
			            </div>
			            
			            <!-- Learn Object Types -->
                  <div class="accordion-group">
                    <div class="accordion-heading">
                      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                        ${message:activityOption} <b class="caret"></b>
                      </a>
                    </div>
			              <div id="collapseTwo" class="accordion-body collapse">
			                <div class="accordion-inner">    
		            			 <t:jquery.palette 
		            			   t:id="activities" 
	                              encoder="learningTypeEncoder"
	                              selected="selectedLearningTypes"
	                              model="learningTypeSelectModel"/>
		            		  </div>
			              </div>
                  </div>
                  
                  <!-- Member -->
                  <div class="accordion-group">
                    <div class="accordion-heading">
                      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">
                       ${message:userOption} <b class="caret"></b>
                      </a>
                    </div>   
			        <div id="collapseThree" class="accordion-body collapse">  
			        	<div class="accordion-inner">               
                        
	                            <t:jquery.palette
	                              t:id="users"
	                              encoder="userIdEncoder"
	                              selected="selectedUsers"
	                              model="userIds"/>
                       
                       			 <br />
	                              
	                              <t:jquery.palette
	                              t:id="gender"
	                              encoder="genderEncoder"
	                              selected="selectedGender"
	                              model="genderModel"/>
                     	 </div>
			        </div>
			      </div>
			       
			       
			     <!-- Courses -->
                  <div class="accordion-group">
                    <div class="accordion-heading">
                      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseFive">
                        ${message:courseOption} <b class="caret"></b>
                      </a>
                    </div>   
			        <div id="collapseFive" class="accordion-body collapse">  
			        	<div class="accordion-inner">               
                        
	                             <t:jquery.palette
	                              t:id="courses"
	                              encoder="courseValueEncoder"
	                              selected="selectedCourses"
	                              model="courses"/>
                       
                     	 </div>
			        </div>
			      </div>  
			      <!--  Learning objects  -->
                  <div class="accordion-group">
                    <div class="accordion-heading">
                      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseSix">
                        ${message:learning-object} <b class="caret"></b>
                      </a>
                    </div>
			              <div id="collapseSix" class="accordion-body collapse">
			                <div class="accordion-inner">    
		            			 <t:jquery.palette 
	                              t:id="learningObjects"
	                              encoder="learningObjectEncoder"
	                              selected="selectedLearningObjects"
	                              model="learningObjectSelectModel"/>		            			 			
		            		  </div>
			              </div>
                  </div>  
	
			            
			 </div><!-- accordion -->
  			   		
  			   		

            
       
        			
<!--    				<input type="text" class="input-large search-query"/>-->
<!--    				<button type="submit" class="btn pull-right">${message:search}</button>-->
<!--    		</div> THUMBNAIL-->
    		</div> <!--span12-->
    		</div> <!--row fluid-->
    		
    		</t:form>	
    	</div>
    	
    
  </div>
  <script type="text/javascript">
  	var cal1 = new CalHeatMap();
  	var cal2 = new CalHeatMap();
  	var cal3 = new CalHeatMap();
    cal1.init({
    	itemSelector: "#cal-heatmap1",
        data: ${questionResult},
        start: new Date(2012, 0, 1),
        range: 4, 
        domain: "month", 
        subDomain: "x_day",
        domainMargin: 10,
        cellSize: 25,
		subDomainTextFormat: "%d",
        browsing: true,
        legend: [100,550,600,650], 
        legendColors: ["#FFFFFF", "#FF0000"],
        displayLegend: false,        
	})
	    cal2.init({
    	itemSelector: "#cal-heatmap2",
        data: ${questionResult},
        start: new Date(2012, 4, 1),
        range: 4, 
        domain: "month", 
        subDomain: "x_day",
        domainMargin: 10,
        cellSize: 25,
		subDomainTextFormat: "%d",
        browsing: true, 
        legendColors: ["#FFFFFF", "#FF0000"],
        legend: [100,550,600,650], 
        displayLegend: false,
	})
	    cal3.init({
    	itemSelector: "#cal-heatmap3",
        data: ${questionResult},
        start: new Date(2012, 8, 1),
        range: 4, 
        domain: "month", 
        subDomain: "x_day",
        domainMargin: 10,
        cellSize: 25,
		subDomainTextFormat: "%d",
        browsing: true, 
        legend: [100,550,600,650], 
        legendColors: ["#FFFFFF", "#FF0000"],
	})
  </script>
</html>