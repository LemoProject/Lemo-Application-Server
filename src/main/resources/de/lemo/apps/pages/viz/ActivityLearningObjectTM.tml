<!--			        			-->
<!--			        			<label class="control-label" id="slider-label">Visits 1 - Max.:</label>-->
<!--  			                	<div class="slider" id="supportSlider"></div><br />-->
<!--  			                	<br />-->
<!--  			                	-->
<!--             -->
<!--                        -->
