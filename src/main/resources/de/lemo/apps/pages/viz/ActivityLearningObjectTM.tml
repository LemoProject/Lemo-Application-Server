<!--  			                	<label class="control-label" id="distanceslider-label"></label>-->
<!--  			                	<div class="slider" id="distancesupportSlider"></div><br />-->
<!--  			                	<br/>-->
<!--  			                	-->
<!--  			                	<button id="reset" class="btn btn-tiny reset">Reset</button>   -->
<!--                       -->
<!--                     	 </div>-->
<!--			        </div>-->
<!--			      </div>  -->
			            
			 </div><!-- accordion -->
  			   		
  			   	

           
       
        			
