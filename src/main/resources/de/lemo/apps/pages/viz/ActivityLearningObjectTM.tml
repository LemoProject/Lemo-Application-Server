<html t:type="layoutdashboard" title="LeMo | Visualization"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
     
  <!-- Breadcrumb component-->
	<div class="row-fluid">
        <div class="span12">
    	<ul class="breadcrumb">
  			<li t:type="crumb/breadcrumbtrail" t:value="breadCrumb">
    			<a t:type="crumb/displaybreadcrumb" t:breadcrumb="breadCrumb" />
  			</li>
		</ul>
		</div>
	</div>
	
	<div class="row-fluid">
		  
    	<div class="span9">
        	<div id="viz">
        		<!-- d3js visualization -->
        	</div>
    	</div>
      
    	<div class="span3">
    		<t:zone t:id="formZone" id="formZone">
    		</t:zone> 
      		<t:form t:type="form" t:id="customizeForm" class="pull-left">
    		<div class="row-fluid">
      		<div class="span12">
      			<div class="well">
      				<h4>${course.courseDescription}</h4>
      				<br />
      				${message:available}: ${FirstRequestDate} - ${LastRequestDate}
      				<br />
      				<br />
      				${message:range}: ${resolution} ${message:days}
      				<br />
      				<ul class="nav nav-list">
 
					  <li class="divider"></li>
					
					</ul>
      				
      				<span t:type="submit" value="${message:update}" class="btn btn-primary pull-left" />
      				<span class="pull-left"> &nbsp; </span>
      				<a href="#myModal" role="button" class="btn pull-left" data-toggle="modal">${message:help}</a>
      				
      				<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					  <div class="modal-header">
					    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
					    <h3 id="myModalLabel">Help for Heatmap</h3>
					  </div>
					  <div class="modal-body">
					    <p>You can use this to see course activity</p>
					  </div>
					</div>
      				
      				<br />
      			</div>
      		</div>
      		</div>
      		
      		<!-- Legend -->
      		
			<div class="row-fluid">
    		<div class="span12">
    		<div class="accordion" id="accordion2">
			  <div class="accordion-group">
			    <div class="accordion-heading">
			      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
			        ${message:legend}
			      </a>
			    </div>
			    <div id="collapseOne" class="accordion-body collapse">
			      <div class="accordion-inner">
			        <div class="row-fluid">
    					<span class="legend resource pull-left"></span> <span class="pull-left"><p>${message:EResourceType.RESOURCE}</p></span>
    				</div>
    				<div class="row-fluid">
    					<span class="legend course pull-left"></span> <span class="pull-left"><p>${message:EResourceType.COURSE}</p></span>
    				</div>
    				<div class="row-fluid">
    					<span class="legend forum pull-left"></span> <span class="pull-left"><p>${message:EResourceType.FORUM}</p></span>
    				</div>
    				<div class="row-fluid">
    					<span class="legend question pull-left"></span> <span class="pull-left"><p>${message:EResourceType.QUESTION}</p></span>
    				</div>
    				<div class="row-fluid">
    					<span class="legend quiz pull-left"></span> <span class="pull-left"><p>${message:EResourceType.QUIZ}</p></span>
    				</div>
    				<div class="row-fluid">
    					<span class="legend assignment pull-left"></span> <span class="pull-left"><p>${message:EResourceType.ASSIGNMENT}</p></span>
    				</div>
    				<div class="row-fluid">
    					<span class="legend scorm pull-left"></span> <span class="pull-left"><p>${message:EResourceType.SCORM}</p></span>
    				</div>
    				<div class="row-fluid">
    					<span class="legend wiki pull-left"></span> <span class="pull-left"><p>${message:EResourceType.WIKI}</p></span>
    				</div>
    				<div class="row-fluid">
    					<span class="legend unknown pull-left"></span> <span class="pull-left"><p>${message:EResourceType.UNKNOWN}</p></span>
    				</div>
			      </div>
			    </div>
			  </div>
			 </div>
      		</div>
      		</div>
      		<br/>
      		
			<div class="row-fluid">
    		<div class="span12">
        			
    			
      				<t:errors/>
        			<div class="accordion" id="accordion2">
			            
			            <!-- Dates -->
			            <div class="accordion-group">
			              <div class="accordion-heading">
			                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
			                  ${message:dateTimeOption} <b class="caret"></b>
			                </a>
			              </div>
			              <div id="collapseOne" class="accordion-body collapse in">
			                <div class="accordion-inner">
	
  			                	<div class="control-group">
  			              		
        							<label class="control-label">${message:begin}:</label>
      						   		<div class="controls">
                            			<input t:id="beginDate" class="input-small" t:value="beginDate" t:format="${message:customDateFormat}" t:mixins="jquery/CustomDatepicker" t:params="datepickerparams"/>
      						    	</div>
        						</div>
        						<div class="control-group">
        							
        							<label class="control-label">${message:end}:</label>
        						    <div class="controls">
                            			<input t:id="endDate" class="input-small" t:value="endDate" t:format="${message:customDateFormat}" t:mixins="jquery/CustomDatepicker" t:params="datepickerparams"/>
  			                  		</div>
  			                	</div>
  			              	</div>
			              </div>
			            </div>
			            
			            <!-- Learn Object Types -->
                  <div class="accordion-group">
                    <div class="accordion-heading">
                      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                        ${message:activityOption} <b class="caret"></b>
                      </a>
                    </div>
			              <div id="collapseTwo" class="accordion-body collapse">
			                <div class="accordion-inner">    
		            			 <t:jquery.palette 
		            			   t:id="activities" 
		            			   encoder="activityEncoder"
		            			   model="activityModel"
		            			   selected="selectedActivities"/>
		            		  </div>
			              </div>
                  </div>
                  
                  <!-- Member -->
                  <div class="accordion-group">
                    <div class="accordion-heading">
                      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">
                       ${message:userOption} <b class="caret"></b>
                      </a>
                    </div>   
			        <div id="collapseThree" class="accordion-body collapse">  
			        	<div class="accordion-inner">               
                        
	                            <t:jquery.palette
	                              t:id="users"
	                              encoder="userIdEncoder"
	                              selected="selectedUsers"
	                              model="userIds"/>
	                              
	                              <br />
	                              
	                              <t:jquery.palette
	                              t:id="gender"
	                              encoder="genderEncoder"
	                              selected="selectedGender"
	                              model="genderModel"/>
                       
                     	 </div>
			        </div>
			      </div>
			       
			       
			      <!-- Advanced-->
<!--                  <div class="accordion-group">-->
<!--                    <div class="accordion-heading">-->
<!--                      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseFour">-->
