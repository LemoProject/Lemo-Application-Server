<html t:type="layoutdashboard" title="LeMo | Visualization"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
 
  <!-- Breadcrumb component-->
	<div class="row-fluid">
        <div class="span12">
    	<ul class="breadcrumb">
  			<li t:type="crumb/breadcrumbtrail" t:value="breadCrumb">
    			<a t:type="crumb/displaybreadcrumb" t:breadcrumb="breadCrumb" />
  			</li>
		</ul>
		</div>
	</div>
	<div id="overlayDiv"></div>
	<div class="row-fluid">
    	<div class="span9">
        <div id="viz">
        	<!-- d3js visualization -->        
        </div>
        <h3>Sankeydiagram of the classifier:</h3>
        <div id="classifier">
        	<!-- d3js visualization -->        
        </div>
        
       <p id="numberOfInstances"></p>
        	
    	</div>
      
    	<div class="span3">
    		<t:zone t:id="formZone" id="formZone">
    		</t:zone> 
			<t:ScatterPlotForm />
    	</div>
  </div>
<script type="text/javascript">
    (function(d3vis, $, undefined) {    
    })(window.d3vis = window.d3vis || {}, jQuery);
    
    (function(d3classifier, $, undefined) {    
    })(window.d3classifier = window.d3classifier || {}, jQuery);
    
</script>
</html>